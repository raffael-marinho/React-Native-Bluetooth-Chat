{
  "expo": {
    "name": "React-Native-Bluetooth-Chat",
    "slug": "React-Native-Bluetooth-Chat",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "Seu aplicativo usa Bluetooth para encontrar e conectar-se a outros dispositivos próximos para chat. Isso é necessário para a funcionalidade de chat via Bluetooth.",
        "NSBluetoothPeripheralUsageDescription": "Seu aplicativo usa Bluetooth para encontrar e conectar-se a outros dispositivos próximos para chat. Isso é necessário para a funcionalidade de chat via Bluetooth.",
        "NSLocationWhenInUseUsageDescription": "Seu aplicativo precisa de acesso à sua localização para descobrir dispositivos Bluetooth próximos para chat. Sua localização não será armazenada ou compartilhada."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_ADVERTISE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_ADVERTISE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN"
      ],
      "usesPermissionFlags": {
        "android.permission.BLUETOOTH_SCAN": "neverForLocation"
      },
      "package": "com.anonymous.ReactNativeBluetoothChat"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "_internal": {
      "isDebug": false,
      "projectRoot": "C:\\Users\\silva\\projetos\\React-Native-Bluetooth-Chat",
      "dynamicConfigPath": null,
      "staticConfigPath": "C:\\Users\\silva\\projetos\\React-Native-Bluetooth-Chat\\app.json",
      "packageJsonPath": "C:\\Users\\silva\\projetos\\React-Native-Bluetooth-Chat\\package.json"
    },
    "plugins": [
      "react-native-ble-plx"
    ]
  }
}
